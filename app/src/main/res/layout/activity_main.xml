<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title TextView: Relational Queries Back4App -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relational Queries Back4App"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <!-- Subtitle TextView: Queries -->
        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="8dp"
            android:text="Queries:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Buttons: Query A, Query B, Query C, Clear Results -->

        <Button
            android:id="@+id/queryCButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queryBButton"
            android:layout_marginTop="8dp"
            android:text="Query C" />

        <Button
            android:id="@+id/queryAButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitleTextView"
            android:layout_marginTop="7dp"
            android:text="Query A" />

        <Button
            android:id="@+id/queryBButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queryAButton"
            android:layout_marginTop="8dp"
            android:text="Query B" />

        <Button
            android:id="@+id/clearResultsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queryCButton"
            android:layout_marginTop="8dp"
            android:text="Clear Results" />

        <!-- Results List TextView -->
        <TextView
            android:id="@+id/resultsListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clearResultsButton"
            android:layout_marginTop="16dp"
            android:text="Results List"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- RecyclerView for Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resultsListTextView"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
